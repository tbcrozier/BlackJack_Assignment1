<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_game"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:context="com.davidroach.blackjack_assignment1.GameActivity"
        android:background="@drawable/background"
    android:weightSum="1">

 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="110dp">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      android:src="@drawable/yes_sign"
      android:id="@+id/imageView24" />


 </LinearLayout>

 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="3">

      <TextView
          android:text="@string/bet_label"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/bet_label_tv"
          android:layout_weight="1"
          android:textAlignment="center" />


     <TextView
         android:text="$0"
         android:textSize="15sp"
         android:textColor="@android:color/white"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/chip_count_tv"
         android:layout_weight="1"
         android:textAlignment="center"/>

 </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_board"
        android:weightSum="2"
        android:layout_weight="0.74">

       <TextView
           android:text=""
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/dealer_score_tv"
           android:layout_weight="1"
           android:textColor="@android:color/white"
           android:textSize="17sp"
           android:textAlignment="center" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/dealer_section"
         android:layout_weight="1"
         android:orientation="horizontal">
     </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/player_score_tv"
           android:layout_weight="1"
           android:textColor="@android:color/white"
           android:textSize="17sp"
           android:textAlignment="center" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/player_section"
         android:orientation="horizontal">
     </LinearLayout>

    </LinearLayout>


    <Button
        android:text="@string/hit_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hit_button"
        android:textSize="20sp"
        android:background="@color/red"/>

    <Button
        android:text="@string/stand_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/stand_button"
        android:textSize="20sp"
        android:background="@color/red" />



 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="80dp"
     android:weightSum="4">

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:srcCompat="@drawable/poker_chip_five"
         android:id="@+id/chip_five_button"
         android:scaleType="centerInside"
         android:backgroundTint="@android:color/transparent"
         android:layout_weight="1" />

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/poker_chip_twentyfive"
         android:id="@+id/chip_twentyfive_button"
         android:backgroundTint="@android:color/transparent"
         android:scaleType="centerInside"
         android:layout_weight="1"/>

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/poker_chip_fifty"
         android:backgroundTint="@android:color/transparent"
         android:scaleType="centerInside"
         android:id="@+id/chip_fifty_button"
         android:layout_weight="1" />

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/poker_chip_hundred"
         android:backgroundTint="@android:color/transparent"
         android:scaleType="centerInside"
         android:id="@+id/chip_hundred_button"
         android:layout_weight="1" />

 </LinearLayout>


</LinearLayout>



